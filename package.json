{
  "name": "@jensmeindertsma/fuel",
  "type": "module",
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "remix build",
    "build:server": "tsx ./support/build-server.ts",
    "clean": "rimraf ./build/ ./public/build/",
    "database:generate": "prisma generate",
    "dev": "remix dev -c 'npm run dev:server' --no-restart",
    "dev:server": "tsx watch ./server/main.ts --ignore \"app/**\" --ignore \"build/**\" --ignore \"node_modules/**\" --clear-screen false",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint:check": "eslint . --cache --cache-location ./node_modules/.cache/eslint",
    "lint:fix": "eslint . --cache --cache-location ./node_modules/.cache/eslint --fix",
    "start": "node ./build/server/main.js",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@prisma/client": "^4.15.0",
    "@remix-run/express": "^1.17.0",
    "@remix-run/node": "^1.17.0",
    "@remix-run/react": "^1.17.0",
    "chokidar": "^3.5.3",
    "close-with-grace": "^1.2.0",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "isbot": "^3.6.10",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@eslint/js": "^8.42.0",
    "@remix-run/dev": "^1.17.0",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.2.5",
    "@types/react": "^18.2.8",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "@vitejs/plugin-react": "^4.0.0",
    "esbuild": "^0.17.19",
    "eslint": "^8.42.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.8",
    "prettier-plugin-prisma": "^4.13.0",
    "prisma": "^4.15.0",
    "rimraf": "^5.0.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.32.0"
  }
}
